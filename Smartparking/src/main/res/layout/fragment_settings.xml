<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSettings">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView33"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:text="Enable night Mode"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <CheckBox
        android:id="@+id/night_mode_switch"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="63dp"
        android:text="On/Off"
        app:layout_constraintStart_toEndOf="@+id/textView33"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orientation_title"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:text="Screen Orientation"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <CheckBox
        android:id="@+id/orientation_switch"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:text="On/Off"
        app:layout_constraintStart_toEndOf="@+id/orientation_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:text="Enable Notification"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265" />

    <CheckBox
        android:id="@+id/notification_switch"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="184dp"
        android:text="On/Off"
        app:layout_constraintStart_toEndOf="@+id/notification_title"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings_change_password_button"
        android:layout_width="393dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Change Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_title" />

    <Button
        android:id="@+id/give_feedback_button"
        android:layout_width="393dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="Give us Feedback!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_change_password_button" />
</androidx.constraintlayout.widget.ConstraintLayout>